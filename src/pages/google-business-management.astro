---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import Features3 from '~/components/widgets/Features3.astro';


const metadata = {
    title: 'Google Business Management',
};
---

<Layout metadata={metadata}>
    <Hero
        tagline="Service"
        actions={[{ variant:"primary", target: '', text: 'Start exploring', href: '/google-business-management#google-business-services' }]}
        image={{
            src: '~/assets/images/google-business-management-service-main.webp',
            alt: 'Google Business Management Service',
        }}
        >
        <Fragment slot="title">
            Google Business Management
        </Fragment>

        <Fragment slot="subtitle">
            We help you manage your Google Business account to ensure that 
            your business is visible to your customers.
        </Fragment>
    </Hero>

        <!-- Google Business Services -->
        <Features2
        id='google-business-services'
        tagline='Your Business on Google'
        title='Google Services We Offer'
        subtitle='Our web development services are designed to help businesses create a strong online presence. We offer a range of services from website design to ecommerce solutions. Our team of experts will work with you to create a website that is both visually appealing and functional.'
        items={[
            {
                title: 'Google Business Profile Setup',
                description: 'We help you set up your Google Business Profile, ensuring that your business is visible to your customers and that you are able to manage your online presence effectively.',
                icon: 'tabler:brand-google',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Google Ads Management',
                description: 'We help you create and manage Google Ads campaigns to drive traffic to your website and increase your online visibility.',
                icon: 'tabler:ad-2',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Google Analytics Integration',
                description: 'We integrate Google Analytics into your website to help you track and analyze your website traffic, providing you with valuable insights into your online performance.',
                icon: 'tabler:brand-google-analytics',
                classes:{ panel: 'service-card-features' },
            },
        ]},
    />

    <!-- Features3 Widget ************** -->
    <Features3
        tagline="Managed Services"
        title="Why Have Us Manage Your Google Business Account?",
        subtitle="We offer a range of managed services to help you get the most out of your Google Business account. Our team of experts will work with you to create a customized solution that meets your needs and helps you achieve your goals."
        isBeforeContent={true}
        columns={3}

        items={[
            {
                title: 'Expertise',
                description: 'Our team of experts has years of experience managing Google Business accounts and can help you create a strong online presence for your business.',
                icon: 'tabler:star',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Custom Solutions',
                description: 'We work with you to create a customized solution that meets your needs and helps you achieve your goals.',
                icon: 'tabler:settings',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Dedicated Support',
                description: 'We provide dedicated support to help you manage your Google Business account and ensure that your business is visible to your customers.',
                icon: 'tabler:headset',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Performance Tracking',
                description: 'We help you track and analyze your online performance, providing you with valuable insights into your website traffic and online visibility.',
                icon: 'tabler:chart-bar',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Regular Reporting',
                description: 'We provide regular reports to help you track your progress and make informed decisions about your online marketing strategy.',
                icon: 'tabler:file-text',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Continuous Improvement',
                description: 'We are committed to continuous improvement and will work with you to optimize your online presence and achieve your business goals.',
                icon: 'tabler:refresh',
                classes:{ panel: 'service-card-features' },
            },
        ]},
    />

    <!-- Call to Action Section -->
    <CallToAction
    actions={[
        {
            text: 'Contact Us',
            href: '/contact#form',
            target: '_self',
        },
        ]}
    >
        <Fragment slot="title">
        Ready to Get Started?
        </Fragment>

        <Fragment slot="subtitle">
            Weâ€™re here to help you take your business to the next level. Contact us today to learn more about our services and how we can help you achieve your goals.
        </Fragment>

    </CallToAction>
</Layout>