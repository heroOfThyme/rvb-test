---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import Features3 from '~/components/widgets/Features3.astro';


const metadata = {
    title: 'Google Business Management',
};
---

<Layout metadata={metadata}>
    <Hero
        tagline="Service"
        actions={[{ variant:"primary", target: '', text: 'Start exploring', href: '/google-business-management#google-business-services' }]}
        image={{
            src: '~/assets/images/google-business-management-service-main.webp',
            alt: 'Google Business Management Service',
        }}
        >
        <Fragment slot="title">
            Google Business Management
        </Fragment>

        <Fragment slot="subtitle">
            We help you manage your Google Business account to ensure that 
            your business is visible to your customers.
        </Fragment>
    </Hero>

        <!-- Google Business Services -->
        <Features2
        id='google-business-services'
        tagline='Your Business on Google'
        title='Google Services We Offer'
        subtitle='Our web development services are designed to help businesses create a strong online presence. We offer a range of services from website design to ecommerce solutions. Our team of experts will work with you to create a website that is both visually appealing and functional.'
        items={[
            {
                title: 'Google Business Profile Setup',
                description: 'We help you set up your Google Business Profile, ensuring that your business is visible to your customers and that you are able to manage your online presence effectively.',
                icon: 'tabler:brand-google',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Google Ads Management',
                description: 'We help you create and manage Google Ads campaigns to drive traffic to your website and increase your online visibility.',
                icon: 'tabler:ad-2',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Google Analytics Integration',
                description: 'We integrate Google Analytics into your website to help you track and analyze your website traffic, providing you with valuable insights into your online performance.',
                icon: 'tabler:brand-google-analytics',
                classes:{ panel: 'service-card-features' },
            },
        ]},
    />

    <!-- Features3 Widget ************** -->
    <Features3
        tagline="Why We Stand Out"
        title="Our Differentiators",
        subtitle="We are committed to delivering exceptional service and value to our customers. Our unique approach and dedication to excellence set us apart from the competition. Here are some of the reasons why we stand out:"
        isBeforeContent={true}
        columns={2}

        items={[
            {
                title: 'Customer-Centric Approach',
                description: 'We put our customers first, ensuring that their needs and goals are met through our services. Our customer-centric approach is designed to foster lasting relationships and drive success.',
                icon: 'tabler:heart',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Adaptable Solutions',
                description: 'We offer adaptable solutions that can be customized to meet the unique needs of each business. Our flexible approach ensures that our services can evolve with your business.',
                icon: 'tabler:repeat',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Scalable Services',
                description: 'Our services are designed to scale with your business, ensuring that you can meet increased demand and achieve consistent performance. We help you grow without limitations.',
                icon: 'tabler:trending-up',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Innovative Technology',
                description: 'We leverage the latest technology to deliver innovative solutions that drive efficiency and growth. Our team is committed to staying ahead of the curve and delivering cutting-edge services.',
                icon: 'tabler:device-laptop',
                classes:{ panel: 'service-card-features' },
            },
        ]},
        image={{
            src: '~/assets/images/test2.webp',
            alt: 'Business Process Automation Service Features',
        }}
    />

    <!-- Call to Action Section -->
    <CallToAction
    actions={[
        {
            text: 'Contact Us',
            href: '/contact#form',
            target: '_self',
        },
        ]}
    >
        <Fragment slot="title">
        Ready to Get Started?
        </Fragment>

        <Fragment slot="subtitle">
            Weâ€™re here to help you take your business to the next level. Contact us today to learn more about our services and how we can help you achieve your goals.
        </Fragment>

    </CallToAction>
</Layout>