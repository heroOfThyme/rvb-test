---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';
import Steps from '~/components/widgets/Steps.astro';
import Pricing from '~/components/widgets/Pricing.astro';


const metadata = {
    title: 'Google Business Management',
};
---

<Layout metadata={metadata}>
    <Hero
        tagline="Services"
        actions={[{ variant:"primary", target: '', text: 'Start exploring', href: '/google-business-management#google-business-services' }]}
        image={{
            src: '~/assets/images/google-business-management-service-main.webp',
            alt: 'Google Business Management Service',
        }}
        >
        <Fragment slot="title">
            Google Business Management
        </Fragment>

        <Fragment slot="subtitle">
            We help you manage your Google Business account to ensure that 
            your business is visible to your customers.
        </Fragment>
    </Hero>

        <!-- Google Business Services -->
        <Features2
        id='google-business-services'
        tagline='Your Business on Google'
        title='Google Services We Offer'
        subtitle='Our web development services are designed to help businesses create a strong online presence. We offer a range of services from website design to ecommerce solutions. Our team of experts will work with you to create a website that is both visually appealing and functional.'
        items={[
            {
                title: 'Google Business Profile Setup',
                description: 'We help you set up your Google Business Profile, ensuring that your business is visible to your customers and that you are able to manage your online presence effectively.',
                icon: 'tabler:brand-google',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Google Ads Management',
                description: 'We help you create and manage Google Ads campaigns to drive traffic to your website and increase your online visibility.',
                icon: 'tabler:ad-2',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Google Analytics Integration',
                description: 'We integrate Google Analytics into your website to help you track and analyze your website traffic, providing you with valuable insights into your online performance.',
                icon: 'tabler:brand-google-analytics',
                classes:{ panel: 'service-card-features' },
            },
        ]},
    />

    <!-- Content Section -->
    <Content
        tagline='Managed Service'
        id='Why Choose Us?'
        title='Why Have Your Google Profile Managed?'
        subtitle='There are many benefits to having your Google Business Profile managed by professionals. We offer a range of services to help you get the most out of your online presence.'
        items={[
            {
                title: 'Increased Visibility',
                description: 'We help you optimize your Google Business Profile to ensure that your business is visible to your customers when they search for your products or services.',
                icon: 'tabler:eye',
            },
            {
                title: 'Improved Profile',
                description: 'We help you create a professional and engaging Google Business Profile that showcases your business in the best possible light, helping you attract more customers.',
                icon: 'tabler:star',
            },
            {
                title: 'Better Customer Engagement',
                description: 'We help you engage with your customers by responding to messages and questions, ensuring that your customers have a positive experience when interacting with your business.',
                icon: 'tabler:circle',
            },
            {
                title: 'Detailed Reporting',
                description: 'We provide you with detailed reports on your online performance, including website traffic, customer engagement, and online visibility, helping you make informed decisions about your online presence.',
                icon: 'tabler:files',
            },
        ]}
        image={{ src: '~/assets/images/web-hosting-service-main.png',
        alt: 'Main Services Image',
        }}
    />

    <!-- Call to Action Section -->
    <CallToAction
    actions={[
        {
            text: 'Contact Us',
            href: '/contact#form',
            target: '_self',
        },
        ]}
    >
        <Fragment slot="title">
        Ready to Get Started?
        </Fragment>

        <Fragment slot="subtitle">
            Weâ€™re here to help you take your business to the next level. Contact us today to learn more about our services and how we can help you achieve your goals.
        </Fragment>

    </CallToAction>
</Layout>