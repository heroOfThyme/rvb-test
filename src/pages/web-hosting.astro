---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';
import Prices from '~/components/widgets/Pricing.astro';


const metadata = {
    title: 'Web Hosting Solutions',
};
---

<Layout metadata={metadata}>
    <Hero
        tagline="Services"
        actions={[{ variant:"primary", target: '_blank', text: 'Start exploring', href: '/' }]}
        image={{
            src: '~/assets/images/web-development-main.webp',
            alt: 'RVB Web Development Solutions Image',
        }}
        >
        <Fragment slot="title">
            Web Hosting Solutions
        </Fragment>

        <Fragment slot="subtitle">
            Our web hosting solutions are designed to keep your 
            website up and running smoothly. We offer a range of 
            services from website migration to server maintenance. 
            Our team of experts will work with you to ensure that your 
            website is secure, fast, and reliable.
        </Fragment>
    </Hero>

    <!-- Web Design Section -->
    <Content
        tagline="Making it Look Pretty"
        title='Web Design Solutions'
        subtitle='Our web design solutions are tailored to your business needs. We offer a range of services from website design to SEO optimization. Our team of experts will work with you to create a website that is both visually appealing and functional.',
        image={{
            src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
            alt: 'AstroWind Content Image',
        }}
        columns={1}
        items={[
            {
                title: 'Custom and Responsive Design',
                description: 'All of our websites are created visually appealing and are mobile-friendly, ensuring a seamless user experience across all devices.',
            },
            {
                title: 'Wireframing and Prototyping',
                description: 'We develop wireframes and interactive prototypes to help our clients visualize their website’s layout and functionality before moving to the development stage.',
            },
            {
                title: 'Brand Integration',
                description: `We integrate your brand’s colors, fonts, and logos into your website to create a cohesive and professional look that aligns with your brand identity.`,
            },
            {
                title: 'Content Strategy',
                description: 'We help our clients in organizing and structuring their website content to effectively convey their message and enhance search engine optimization (SEO).',
            },
        ]},
    />


    <!-- Ecommerce  -->
    <Content
            tagline='Selling Online'
            title='Ecommerce Solutions'
            subtitle='Our ecommerce solutions are designed to help businesses sell their products and services online. We offer a range of services from online store design to payment gateway integration. Our team of experts will work with you to create an online store that is both visually appealing and functional.',
            image={{
                src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
                alt: 'AstroWind Content Image',
            }}
            items={[
                {
                    title: 'Online Store Design',
                    description: 'We design and develop online stores that are visually appealing and user-friendly, ensuring a seamless shopping experience for your customers.',
                },
                {
                    title: 'Payment Gateway Integration',
                    description: 'We integrate secure payment gateways into your online store, allowing you to accept payments from customers using a variety of payment methods.',
                },
                {
                    title: 'Product Management',
                    description: 'We help you manage your online store’s product catalog, including adding new products, updating existing products, and removing outdated products.',
                },
                {
                    title: 'Order Management',
                    description: 'We help you manage your online store’s orders, including processing new orders, updating order statuses, and generating order reports.',
                },
                {
                    title: 'Customer Management',
                    description: 'We help you manage your online store’s customer database, including adding new customers, updating existing customer information, and removing outdated customer information.',
                }
            ]}
            isReversed={true}
    />

    <!-- SEO Section -->
    <Content
        tagline="Getting Found"
        title='SEO Solutions'
        subtitle='Our SEO solutions are designed to help businesses improve their search engine rankings and drive more organic traffic to their websites. We offer a range of services from keyword research to on-page optimization. Our team of experts will work with you to create an SEO strategy that is tailored to your business needs.',
        image={{
            src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
            alt: 'AstroWind Content Image',
        }}
        items={[
            {
                title: 'Keyword Research',
                description: 'We conduct in-depth keyword research to identify the most relevant and high-traffic keywords for your business, helping you rank higher in search engine results pages (SERPs).',
            },
            {
                title: 'On-Page Optimization',
                description: 'We optimize your website’s on-page elements, including meta tags, headings, and content, to improve your search engine rankings and drive more organic traffic to your site.',
            },
            {
                title: 'Off-Page Optimization',
                description: 'We build high-quality backlinks to your website from authoritative websites, helping you improve your search engine rankings and drive more organic traffic to your site.',
            },
            {
                title: 'Local SEO',
                description: 'We optimize your website for local search, helping you attract more customers from your local area and improve your search engine rankings for location-based searches.',
            },
            {
                title: 'SEO Reporting',
                description: 'We provide detailed SEO reports that track your website’s search engine rankings, organic traffic, and keyword performance, helping you measure the success of your SEO efforts.',
            }
        ]}
        classes={{ icon: 'bg-primary'}}
    />

    <!-- Web Hosting Solutions -->
    <Content
        tagline="Keeping it Running"
        title='Web Hosting Solutions'
        subtitle='Our web hosting solutions are designed to keep your website up and running smoothly. We offer a range of services from website migration to server maintenance. Our team of experts will work with you to ensure that your website is secure, fast, and reliable.',
        image={{
            src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
            alt: 'AstroWind Content Image',
        }}
        items={[
            {
                title: 'Website Migration',
                description: 'We help you migrate your website from your current hosting provider to our hosting platform, ensuring a seamless transition with minimal downtime.',
            },
            {
                title: 'Server Maintenance',
                description: 'We monitor and maintain your website’s server to ensure that it is secure, fast, and reliable, helping you avoid downtime and keep your website running smoothly.',
            },
            {
                title: 'SSL Certificate Installation',
                description: 'We install SSL certificates on your website to encrypt data transmitted between your website and your visitors, ensuring that sensitive information is secure and protected.',
            },
            {
                title: 'Backup and Recovery',
                description: 'We regularly back up your website’s data and files to ensure that you can quickly recover your website in the event of data loss or server failure.',
            },
            {
                title: '24/7 Support',
                description: 'We provide 24/7 technical support to help you resolve any issues with your website, ensuring that your website is up and running smoothly at all times.',
            }
        ]}
        isReversed={true}
    />

