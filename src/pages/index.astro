---
export const prerender = false

import Layout from '../layouts/PageLayout.astro';

import Note from '../components/widgets/Note.astro';
import Features2 from '../components/widgets/Features2.astro';
import Steps from '../components/widgets/Steps.astro';
import BlogLatestPosts from '../components/widgets/BlogLatestPosts.astro';
import FAQs from '../components/widgets/FAQs.astro';
import CallToAction from '../components/widgets/CallToAction.astro';
import Hero2 from '../components/widgets/Hero2.astro';
import Brands from '../components/widgets/Brands.astro';
import Testimonials from '../components/widgets/Testimonials.astro';
import RecentWork from '../components/widgets/RecentWork.astro';

// Page metadata
const metadata = {
  title: 'RVB Corp - Burlingtons Premium Web',
  ignoreTitleTemplate: true,
  description: 'RVB Corp is a premium web agency in Burlington, Ontario. We specialize in web development, automation, and Google services. Contact us today to learn more.',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    title: 'RVB Corp - Burlingtons Premium Web Agency',
    description: 'RVB Corp is a premium web agency in Burlington, Ontario. We specialize in web development, automation, and Google services. Contact us today to learn more.',
    images: [
      {
        url: '~/assets/images/web-dev-service-main-draft.webp',
        width: 800,
        height: 600,
        alt: 'RVB Corp - Burlingtons Premium Web Agency & Digital Marketing Firm',
      },
    ],
  },
  twitter: {
    cardType: 'summary_large_image',
  },
};
---

<Layout metadata={metadata}>

  <!-- Hero Widget ******************* -->
  <Hero2
    actions={[
      {
        variant: 'primary',
        icon: 'tabler:arrow-right',
        text: 'Lets Get Started',
        href: '/contact#form',
        target: '_self',
        class: 'text-white bg-primary hover:bg-secondary',
      },
      {
        variant: 'secondary',
        icon: 'tabler:briefcase',
        text: 'See Our Work',
        href: '/portfolio',
        target: '_self',
      }
    ]}
    image={{ src: '~/assets/images/web-dev-service-main-draft.webp', alt: 'Browser Window with a Script Running' }},
    
  >
    <Fragment slot="title">Tailored
      <span class="text-primary"> Web Solutions</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="inline">
        Burlington's  <span class="intro-text-bold">local</span> web agency, our <span class="intro-text-bold">specialty</span> is the web, 
        including web development, automation, Google services, SEO, and more. 
        Partner with us to <span class="intro-text-bold">transform your digital landscape</span> and stay ahead in the competitive market.
      </span>
    </Fragment>
    <!--  
    <Fragment slot="bg">
      <video 
        src="/images/iStock-1046965704.mp4"
        autoplay= true
        class="video-background"
        loop="true"
      />
    </Fragment>
    -->
  </Hero2>

  <!-- Mission Statement ******************* -->
  <Note />

  <!-- Services Section *************** -->
  <Features2
    id="Services"
    tagline="Services"
    title="Your Digital Landscape. Covered."
    subtitle="We offer a range of services to help your business succeed online. From web development to Google services, hosting and more, we have you covered."
    items={[

      // Web Dev Service
      {
        title: 'Web Development',
        description:
          'We build websites tailored to your business needs. We focus on creating websites that effectively communicate your brand and drive growth.',
        icon: 'tabler:code-dots',
        callToAction: {
          text: 'Explore This Service',
          href: '/web-development',
          target: '_self',
          variant: 'primary',
        },
        classes: {
          panel: 'service-card',
          description: 'text-lg'
        },
      },

      // SEO Service
      {
        title: 'Search Engine Optimization (SEO)',
        description:
          "Our SEO services are designed to increase your website’s visibility in search engine results. We use proven strategies to boost your rank.",
        icon: 'tabler:checklist',
        callToAction: {
          text: 'Explore This Service',
          href: '/search-engine-optimization',
          target: '_self',
          variant: 'primary'
        },
        classes: {
          panel: 'service-card',
          description: 'text-lg'
        },
      },

      // Business Process Automation Service
      {
        title: 'Business Process Automation',
        description:
          'Our automation services streamline your operations, reduce manual tasks, and increase accuracy. Let technology work for you.',
        icon: 'tabler:arrows-left-right',
        callToAction: {
          text: 'Explore This Service',
          href: '/business-process-automation',
          target: '_self',
          variant: 'primary',
        },
        classes: {
          panel: 'service-card',
          description: 'text-lg'
        },
      },

      // Google Business Management Service
      {
        title: 'Google Business Management',
        description:
          "Utilize the Google ecosystem to your advantage. From My Business to Ads, Analytics and more, we have services for every Google product.",
        icon: 'tabler:brand-google-filled',
        callToAction: {
          text: 'Explore This Service',
          href: '/google-business-management',
          target: '_self',
          variant: 'primary',
        },
        classes: {
          panel: 'service-card',
          description: 'text-lg'
        },
      },

      // Web Hosting Service
      {
        title: 'Web Hosting',
        description:
          'We provide reliable, secure web hosting solutions that ensure your website is always accessible and performing optimally.',
        icon: 'tabler:server',
        callToAction: {
          text: 'Explore This Service',
          href: '/web-hosting',
          target: '_self',
          variant: 'primary',
        },
        classes: {
          panel: 'service-card',
          description: 'text-lg'
        },
      },
    ]}
  />

  <!-- Portfolio Section -->
  <RecentWork
      tagline="Creating Experiences"
      title="Recent Work"
      subtitle="Explore a selection of our latest projects. Each one reflects our commitment to quality, and client success."
  />

  <!-- Brand Section -->
  <Brands
    tagline='Working with Giants'
    title="Our Partnerships"
    subtitle="We work with the best to deliver the best."
    images={[
      {
        src: '~/assets/images/Shopify_Primary_Inverted (1).svg',
        alt: 'Shopify Partnership Logo',
      },
      {
        src: '~/assets/images/DO_Logo_horizontal_blue.svg',
        alt: 'Digital Ocean Partnership Logo',
      },
      {
        src: '~/assets/images/lockup_GoogleCloud_FullColor_rgb_544x96px.svg',
        alt: 'Google Cloud Partnership Logo',
      },
    ]},
  >
  </Brands>

  <!-- Steps Widget ****************** -->
  <Steps
    tagline='Our Process'
    id='Why Choose Us?'
    title='Working with us is easy. So you can focus on what you do best.',
    items={[
      {
        title: 'Step 1: <span class="font-medium">Consultation & Agreement</span>',
        description:
          "We start by understanding your unique needs and goals. Our team will then craft a detailed proposal outlining the scope of work, timelines, and cost.",
        icon: 'tabler:presentation',
      },
      {
        title: 'Step 2: <span class="font-medium">Planning & Design</em>',
        description:
          "Our team will gather all necessary information and create a project plan. We then move on to the design phase where we create the designs for your website.",
        icon: 'tabler:file-time',
      },
      {
        title: 'Step 3: <span class="font-medium">Development & Testing</span>',
        description:
          'This is where our developers bring the designs to life. We adhere to best coding practices and build a website that is not only visually appealing but also functional and user-friendly.',
        icon: 'tabler:source-code',
      },
      {
        title: 'Step 4: <span class="font-medium">Deployment</span>',
        description:
          'Once everything is tested and approved by you, we deploy the website and make it live for the world to see.',
        icon: 'tabler:shareplay',
      },
      {
        title: 'Step 5: <span class="font-medium">Post Launch Support</span>',
        description:
          'Our relationship doesn’t end at deployment. We offer post-launch support to fix any issues and ensure smooth operation.',
        icon: 'tabler:heart-filled',
      },
    ]}
    image={{ 
      src: '~/assets/images/rvb-steps-main.webp',
      alt: 'Coloured Line Graph Showing Steps',
    }}
  />

  <!-- HighlightedPosts Widget ******* -->
  <BlogLatestPosts
    title="Latest Scoop from Our Desk"
    information={`Check out our Blog page where we talk about projects, handy tips, and all things web. Dive in for more.
                `}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Some Common Questions"
    subtitle="We’re here to help you make an informed decision. Here are some common questions we get asked."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'How long does it take to design and develop a website?',
        description:
          "Typically, a website takes between 1 to 3 weeks to complete. However, this duration can fluctuate based on your unique requirements. During our initial consultation, we’ll gain a better understanding of your needs and will be able to provide a more precise timeline.",
        classes: {
          title: 'hover:text-primary',
        }
      },
      {
        title: 'How much input will I have during the design process?',
        description:
          "Your input guides our design process. We initiate projects with a discovery session to understand your brand and goals, then involve you at every step, presenting concepts for your approval to ensure the website accurately represents your business.",
        classes: {
          title: 'hover:text-primary',
        }
      },
      {
        title: "Do you perform work outside of your listed services?",
        description:
          "Yes we do. We are problem solvers and love a challenge. If you have a project that doesn’t fit into our listed services, please reach out to us. We’d love to discuss how we can help you achieve your goals.",
        classes: {
          title: 'hover:text-primary',
        }
      },
      {
        title: 'Do you provide training or support after launch?',
        description:
          "Yes, we offer training and support to help you manage your projects post-launch. We provide tutorials and documentation to guide you through the process and are available to answer any questions you may have.",
        classes: {
          title: 'hover:text-primary',
        }
      },
    ]}
  />

  <!-- Testimonials Widget ****************** -->
  <Testimonials
    tagline='Testimonials'
    title="Words from Our Amazing Clients"
    subtitle="Our favourite part of this job is helping out members of our local communities. We thank everybody for their kind words."
    testimonials={[
      {
        testimonial: `Petar worked so hard for me. Im almost 60 and retired. I needed one page simple website for my new business. He listened and created perfectly what I needed. Hes very patient as I am Not tech savy! Thank you!!`,
        name: 'Donna Irving',
        job: 'Seniors Helper - Owner',
      },
      {
        testimonial: `Great service. Working on improving SEO constantly. Easy to get a hold of and replies usually within hours. Changes are made the same day. We both continue to adjust the website if we notice where improvements can be made.`,
        name: 'Alex Orton',
        job: 'Legacy Exteriors Inc - Owner',
      },
      {
        testimonial:
          "RVB did an outstanding job on our website. The team was professional, creative, and attentive to our vision. We felt supported every step of the way and couldn't be happier with our results. Highly recommend their web development services!",
        name: 'Slavko Vidakovic',
        job: 'S&V Memorials - Owner',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
        {
            text: 'Contact Us',
            href: '/contact#form',
            target: '_self',
            variant: 'primary',
        },
        ]}
    >
        <Fragment slot="title">
          Ready to Transform Your Business?
        </Fragment>

        <Fragment slot="subtitle">
          Let’s build something <span class="text-primary">amazing</span> together. 
          Contact us today to discuss your project and discover how we can help you <span class="text-primary">achieve</span> your goals.
        </Fragment>

  </CallToAction>
</Layout>
