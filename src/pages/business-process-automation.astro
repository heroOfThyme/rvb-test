---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Layout from '~/layouts/PageLayout.astro';


const metadata = {
    title: 'Business Process Automation',
};
---

<Layout metadata={metadata}>
    <Hero
        tagline="Services"
        actions={[{ variant:"primary", target: '', text: 'Start exploring', href: '#Features' }]}
        image={{
            src: '~/assets/images/business-process-automation-service-main.png',
            alt: 'Business Process Automation Service Production Line in Sync',
        }}
        >
        <Fragment slot="title">
            Business Process Automation
        </Fragment>

        <Fragment slot="subtitle">
            Step into the new era of business with our process automation services. 
            We are committed to helping businesses enhance efficiency, improve accuracy, and achieve scalability through automation. 
            Transform your business operations and drive growth with our tailored automation solutions.
        </Fragment>
    </Hero>

    <!-- Features Section -->
    <Features2
        id='Features'
        title="Our Automation Services",
        subtitle="Streamline Operations, Enhance Efficiency, and Drive Growth"
        items={[
            {
                title: 'Automated Task Management',
                description: 'Eliminate manual tasks and reduce errors with our automated task management feature. This allows for more efficient use of resources.',
                icon: 'tabler:robot',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Real-Time Analytics',
                description: ' Gain insights into your business operations with real-time analytics. Make data-driven decisions and identify areas for improvement.',
                icon: 'tabler:hours-24',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Integration Capabilities',
                description: 'Our service can seamlessly integrate with your existing systems, ensuring a smooth transition and maximizing the benefits of automation.',
                icon: 'tabler:layers-intersect',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Scalability',
                description: 'As your business grows, our services can easily scale to meet increased demand, ensuring consistent performance and efficiency.',
                icon: 'tabler:trending-up',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'API Development',
                description: 'We offer API development services to help you connect your systems and applications, enabling seamless data exchange and communication.',
                icon: 'tabler:code-dots',
                classes:{ panel: 'service-card-features' },
            },
            {
                title: 'Customer Support',
                description: 'We provide round-the-clock customer support to ensure any issues are promptly addressed and your business operations run smoothly.',
                icon: 'tabler:device-imac-plus',
                classes:{ panel: 'service-card-features' },
            },
        ]},
    />

    <!-- Content Section -->
    <Content
        tagline='Our Approach'
        title="Why Choose Us?"
        subtitle="We are committed to helping you achieve your business goals through automation."
        image={{
            src: '~/assets/images/web-development-main.webp',
            alt: 'RVB Web Development Solutions Image',
        }}
        isReversed={true}

        items={[
            {
                title: 'Customized Solutions',
                description: 'We understand that every business is unique. Our team will work with you to develop customized solutions that meet your specific needs and requirements.',
                icon: 'tabler:check',
            },
            {
                title: 'Process Analysis',
                description: 'We conduct a thorough analysis of your existing processes to identify areas for automation and improvement. This ensures that our solutions are tailored to your business.',
                icon: 'tabler:check',
            },
            {
                title: 'Measurable Results',
                description: 'We focus on delivering measurable results that drive business growth and efficiency. Our solutions are designed to help you achieve your goals and objectives.',
                icon: 'tabler:check',
            },
        ]}

    />

    <!-- Call to Action Section -->
    <CallToAction
    actions={[
        {
            text: 'Contact Us',
            href: '/contact#form',
            target: '_self',
        },
        ]}
    >
        <Fragment slot="title">
        Ready to Get Started?
        </Fragment>

        <Fragment slot="subtitle">
            Weâ€™re here to help you take your business to the next level. Contact us today to learn more about our services and how we can help you achieve your goals.
        </Fragment>

    </CallToAction>

</Layout>