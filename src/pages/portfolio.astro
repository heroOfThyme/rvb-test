---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import PortfolioItem from '~/components/widgets/PortfolioItem.astro';


const metadata = {
    title: 'Our Portfolio - Check Out Our Showcase of Websites and Projects',
    description: 'Our portfolio showcases some of the websites we have built for our clients. We take pride in our work and strive to deliver the best possible product to our clients.',
    robots: {
        index: true,
        follow: true,
    },
    openGraph: {
        title: 'Our Portfolio - Check Out Our Showcase of Websites and Projects',
        description: 'Our portfolio showcases some of the websites we have built for our clients. We take pride in our work and strive to deliver the best possible product to our clients.',
        images: [
            {
                url: '~/assets/images/about-us-main.webp',
                width: 800,
                height: 600,
                alt: 'Our Portfolio - Check Out Our Showcase of Websites and Projects',
            },
        ],
    },
    twitter: {
        cardType: 'summary_large_image',
    },
};

---

<Layout metadata={metadata}>
    <Hero>
        <Fragment slot="tagline">
            Our Work Speaks for Itself
        </Fragment>
        <Fragment slot="title">
            Our Portfolio
        </Fragment>

        <Fragment slot="subtitle">
            Our portfolio showcases some of the websites we have built for our clients. We take pride in our work and strive to deliver the best possible product to our clients.
        </Fragment>
    </Hero>

    <PortfolioItem
    columns={3}
    items={[
        {
            title: 'Legacy Exteriors Inc',
            description: 'Windsors Excavation Expert',
            callToAction: {
                href: "https://legacyexteriorsinc.com", 
                target: "_self", 
                text: "Visit the Website", 
                icon: 'tabler:chevron-right', 
                variant: 'link', 
            },
            classes: {
                container2: 'bg-[url("~/assets/images/legacy-exteriors-portfolio-bg-fixed.webp")]',
                description: 'text-muted',
            }
        },
        {
            title: 'S&V Memorials',
            description: 'Windsors Top Memorial Service',
            callToAction: {
                href: "https://svmemorials.com", 
                target: "_self", 
                text: "Visit the Website", 
                icon: 'tabler:chevron-right', 
                variant: 'link', 
            },
            classes: {container2: 'bg-[url("~/assets/images/sv-memorials-portfolio-bg.webp")]'}
        },
        {
            title: 'Seniors Helper',
            description: 'Burlingtons Senior Care Service Provider',
            callToAction: {
                href: "https://seniorshelper.ca", 
                target: "_self", 
                text: "Visit the Website", 
                icon: 'tabler:chevron-right', 
                variant: 'link',
            },
            classes: {
                container2: 'bg-[url("~/assets/images/seniors-helper-portfolio-bg.webp")]',
                panel: 'place-content-end',
                title: 'text-white',
                description: 'text-muted'
            },
        },
    ]},

    />

</Layout>
