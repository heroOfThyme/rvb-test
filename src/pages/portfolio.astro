---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import PortfolioItem from '~/components/widgets/PortfolioItem.astro';


const metadata = {
    title: 'Our Portfolio',
};

---

<Layout metadata={metadata}>
    <Hero>
        <Fragment slot="title">
            Our Portfolio
        </Fragment>

        <Fragment slot="subtitle">
            We have worked with a variety of clients and industries. Here are some of our recent projects.
        </Fragment>
    </Hero>

    <PortfolioItem
    columns={3}
    items={[
        {
            title: 'Legacy Exteriors Inc',
            description: 'Windsors Excavation Expert',
            callToAction: {
                href: "https://legacyexteriorsinc.com", 
                target: "_blank", 
                text: "Visit the Website", 
                icon: 'tabler:chevron-right', 
                variant: 'link', 
            },
            classes: {
                container2: 'bg-[url("~/assets/images/legacy-exteriors-portfolio-bg-fixed.webp")]',
                description: 'text-muted',
            }
        },
        {
            title: 'S&V Memorials',
            description: 'Windsors Top Memorial Service',
            callToAction: {
                href: "https://svmemorials.com", 
                target: "_blank", 
                text: "Visit the Website", 
                icon: 'tabler:chevron-right', 
                variant: 'link', 
            },
            classes: {container2: 'bg-[url("~/assets/images/sv-memorials-portfolio-bg.webp")]'}
        },
        {
            title: 'Seniors Helper',
            description: 'Windsors Excavation Expert',
            callToAction: {
                href: "https://seniorshelper.ca", 
                target: "_blank", 
                text: "Visit the Website", 
                icon: 'tabler:chevron-right', 
                variant: 'link',
            },
            classes: {
                container2: 'bg-[url("~/assets/images/seniors-helper-portfolio-bg.webp")]',
                panel: 'place-content-end',
                title: 'text-white',
                description: 'text-muted'
            },
        },
    ]},

    />

</Layout>
