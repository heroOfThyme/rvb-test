---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'About us',
};

const { bg = '' } = Astro.props;
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: '~/assets/images/rvb-about-us.png',
      alt: 'RVB Coding Away',
    }}
  >
    <Fragment slot="title">
      Discover Our Business
    </Fragment>

    <Fragment slot="subtitle">
      Welcome to RVB Data Sciences Corp, where our passion for web development and technology 
      fuels our commitment to helping businesses thrive online. 
      Our expert team is dedicated to providing innovative, custom-built solutions that 
      enable small businesses to reach their full potential in today’s digital landscape.
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Mission Statement"
    subtitle="Our mission is to provide innovative, custom-built solutions that enable small businesses to reach their full potential in today’s digital landscape."
    isBeforeContent={true}
    items={[
    ]},

    classes={{
      container: "py-10",
    }}
  />


  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our values"
    subtitle="At RVB, we believe in the power of collaboration and building lasting relationships with our clients. We work closely with you to understand your unique goals and challenges, tailoring our solutions to fit your specific needs."
    items={[
      {
        title: 'Integrity',
        description:
          'We believe in maintaining transparency and honesty in all our dealings, fostering strong relationships with our clients.',
      },
      {
        title: 'Excellence',
        description:
          'We are committed to delivering exceptional results, continually improving our processes to exceed client expectations.',
      },
      {
        title: 'Collaboration',
        description:
          'We value teamwork and believe in the power of collaboration to solve complex problems and deliver outstanding solutions.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Why Choose Us"
    subtitle="When you choose our company, you’re not just hiring a team of web developers. You’re partnering with a group of dedicated professionals who are committed to bringing your vision to life. We pride ourselves on our ability to deliver high-quality, user-centric solutions tailored to your specific needs."
    isReversed={true}
    callToAction={{
      text: 'See Our Work',
      href: '/portfolio',
    }}
    items={[
      {
        title: 'Customized Solutions',
        description: 'We provide tailored solutions that meet the unique needs of each client, ensuring a plan that works for you.',
        icon: 'tabler:settings',
      },
      {
        title: 'Expertise',
        description:
          'Our team of experienced professionals is dedicated to staying ahead of the curve, delivering cutting-edge solutions that drive results.',
        icon: 'tabler:star',
      },
      {
        title: 'Transparency and Communication',
        description:
          'We believe in open communication and transparency, keeping you informed every step of the way to ensure your satisfaction.',
        icon: 'tabler:message-plus',
      },
    ]}
  />

  <CallToAction
    actions={[
        {
            text: 'Contact Us',
            href: '/contact#form',
            target: '_self',
        },
        ]}
    >
        <Fragment slot="title">
        Ready to Get Started?
        </Fragment>

        <Fragment slot="subtitle">
            We’re here to help you take your business to the next level. Contact us today to learn more about our services and how we can help you achieve your goals.
        </Fragment>

    </CallToAction>

</Layout>
