---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="About us"
    actions={[{ variant:"primary", target: '', text: 'Start exploring', href: '#mission-statement' }]}
    image={{
      src: '~/assets/images/about-us-main.webp',
      alt: 'RVB Coding Away',
    }}
  >
    <Fragment slot="title">
      Discover Our Business
    </Fragment>

    <Fragment slot="subtitle">
      Welcome to RVB Data Sciences Corp, where our passion for software development 
      fuels our commitment to helping businesses utulize the amazing technology the world has to offer.
      Learn about our company here and how we can help you achieve your goals.
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->
  <Features3
    id="mission-statement"
    tagline="Why We Stand Out"
    title="Mission Statement"
    subtitle="Fostering Lasting Relationships, Delivering Adatpable, Scalable Solutions"
    isBeforeContent={true}
  />

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Our values"
    subtitle="Our core values are the foundation of our company, guiding everything we do. We believe in integrity, excellence, and collaboration, and strive to embody these values in all our interactions with clients. We are committed to delivering high-quality solutions that exceed your expectations, ensuring that you are satisfied with the final product. We strive for excellence in everything we do."
    items={[
      {
        title: 'Integrity',
        description:
          'We believe in maintaining transparency and honesty in all our dealings, fostering strong relationships with our clients. We go through all contracts and agreements with you to ensure you understand everything.',
      },
      {
        title: 'Excellence',
        description:
          'We are committed to delivering high-quality solutions that exceed your expectations, ensuring that you are satisfied with the final product.',
      },
      {
        title: 'Collaboration',
        description:
          'We believe in working closely with our clients to understand their unique needs and challenges, fostering a collaborative environment that drives results. We value your input and feedback throughout the process and work with you to ensure your satisfaction.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Why Choose Us"
    subtitle="Most companies don't go to the lengths we do to ensure your satisfaction. We are committed to delivering high-quality solutions that exceed your expectations, ensuring that you are satisfied with the final product."
    isReversed={true}
    callToAction={{
      text: 'See Our Work',
      href: '/portfolio',
    }}
    items={[
      {
        title: 'Customized Solutions',
        description: 'We offer customized solutions tailored to your unique needs, ensuring that you get the results you want. We work closely with you to understand your goals and challenges, delivering solutions that meet your specific requirements.',
        icon: 'tabler:settings',
      },
      {
        title: 'Expertise',
        description:
          'Our team of experts has years of experience in software development, web design, and digital marketing, ensuring that you get the best solutions for your business. We stay up-to-date on the latest trends and technologies to deliver cutting-edge solutions that drive results.',
        icon: 'tabler:star',
      },
      {
        title: 'Transparency and Communication',
        description:
          'We believe in maintaining open and honest communication with our clients, keeping you informed throughout the process. We provide regular updates on the progress of your project and are always available to answer any questions you may have.',
        icon: 'tabler:message-plus',
      },
    ]}
  />

  <!-- Features2 Widget ******************* -->
  <Features2
    tagline='Technology Stack'
    title="What We Use"
    subtitle="A glimpse into the technologies we use to build your solutions"
    items={[
      {
        title: 'JavaScript',
        icon: 'tabler:brand-javascript',
        classes: { icon: 'text-yellow-500'},
      },
      {
        title: 'TypeScript',
        icon: 'tabler:brand-typescript',
        classes: { icon: 'text-blue-500'},
      },
      {
        title: 'PHP',
        icon: 'tabler:brand-php',
        classes: { icon: 'text-purple-500'},
      },
      {
        title: 'Laraval',
        icon: 'tabler:brand-laravel',
        classes: { icon: 'text-red-500'},
      },
      {
        title: 'WordPress',
        icon: 'tabler:brand-wordpress',
        classes: { icon: 'text-blue-500'},
      },
      {
        title: 'Astro',
        icon: 'tabler:brand-astro',
        classes: { icon: 'text-[#eb3ed8]'},
      },
      {
        title: 'Tailwind CSS',
        icon: 'tabler:brand-tailwind',
        classes: { icon: 'text-blue-500'},
      },
      {
        title: 'cPanel',
        icon: 'tabler:device-imac',
        classes: { icon: 'text-orange-500'},
      },
      {
        title: 'Linux',
        icon: 'tabler:brand-ubuntu',
        classes: { icon: 'text-red-500'},
      }
    ]} 
  />

  <CallToAction
    actions={[
        {
            text: 'Contact Us',
            href: '/contact#form',
            target: '_self',
        },
        ]}
    >
        <Fragment slot="title">
        Ready to Get Started?
        </Fragment>

        <Fragment slot="subtitle">
            Weâ€™re here to help you take your business to the next level. Contact us today to learn more about our services and how we can help you achieve your goals.
        </Fragment>

    </CallToAction>

</Layout>