---
import WidgetWrapper from "~/components/ui/WidgetWrapper.astro";
import Headline from "~/components/ui/Headline.astro";
import PortfolioGrid from "~/components/ui/PortfolioGrid.astro";
import type { Features as Props } from "~/types";

const {
  title = await Astro.slots.render("title"),
  subtitle = await Astro.slots.render("subtitle"),
  tagline = await Astro.slots.render("tagline"),
  image = await Astro.slots.render("image"),
  items = [],
  columns = 3,
  defaultIcon,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render("bg"),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={classes?.headline as Record<string, string>}
  />

  <PortfolioGrid
    items={items}
    columns={columns}
    classes={{
      container: "gap-4 md:gap-6 justify-center flex flex-wrap sm:gap-3 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3s ",
      //panel:
      //     'rounded-lg shadow-[0_4px_30px_rgba(0,0,0,0.1)] dark:shadow-[0_4px_30px_rgba(0,0,0,0.1)] backdrop-blur border border-[#ffffff29] bg-white dark:bg-slate-900 p-6',
      panel:
          "flex flex-col place-content-end w-full",
      container2: 
          'rounded-xl size-full h-96 p-6 bg-center',
      ...((classes?.items as {}) ?? {}),
    }}
  />

</WidgetWrapper>