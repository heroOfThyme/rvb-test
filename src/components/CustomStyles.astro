---
import '@fontsource/ubuntu';
import '@fontsource/Poppins';
import '@fontsource/source-sans-pro'

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist

---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter';
    --aw-font-serif: 'Montserrat Variable';
    --aw-font-heading: 'Ubuntu';

    --aw-color-primary: rgb(119 118 255);
    --aw-color-secondary: rgb(97, 97, 210);
    --aw-color-accent: rgb(246, 0, 172);

    --aw-color-text-heading: 'Ubuntu';
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(26 26 26);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Poppins';
    --aw-font-serif: 'Raleway';
    --aw-font-heading: 'Ubuntu';

    --aw-color-primary: rgb(119, 118, 255);
    --aw-color-secondary: rgb(59, 59, 144);
    --aw-color-accent: #c686ff;

    --aw-color-text-heading: rgb(233, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgba(255, 255, 255, 0.6);
    --aw-color-bg-page: #121212;

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>